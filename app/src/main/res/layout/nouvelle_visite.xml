<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vpitard.ppe3_mobile.nouvelle_visite"
    android:orientation="vertical">>

    <TextView
        android:text="Nouvelle_visite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/Nouvelle_visite"
        android:textSize="24sp"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Praticien :"
            android:layout_height="wrap_content"
            android:id="@+id/Praticien"
            android:textSize="18sp"
            android:layout_below="@+id/Nouvelle_visite"
            android:layout_toStartOf="@+id/Nouvelle_visite"
            android:layout_weight="9.27" />

        <Spinner
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPraticien"
            android:layout_alignTop="@+id/Praticien"
            android:layout_toRightOf="@+id/Praticien"
            android:layout_alignRight="@+id/btn_ok"
            android:layout_alignEnd="@+id/btn_ok" />
    </LinearLayout>

    <Button
        android:text="ajouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ajouter_praticien"
        android:elevation="0dp"
        android:layout_below="@+id/spinnerPraticien"
        android:layout_toRightOf="@+id/checkedTextView2"
        android:layout_toEndOf="@+id/checkedTextView2"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/date"
            android:layout_alignBaseline="@+id/btn_Date"
            android:layout_alignBottom="@+id/btn_Date"
            android:layout_toRightOf="@+id/Praticien"
            android:layout_toEndOf="@+id/Praticien"
            android:layout_weight="1"
            android:text="Date" />

        <DatePicker
            android:layout_width="326dp"
            android:layout_height="99dp"
            android:id="@+id/datePicker" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_annuler"
            android:text="annuler"
            android:layout_alignBaseline="@+id/btn_ok"
            android:layout_alignBottom="@+id/btn_ok"
            android:layout_toLeftOf="@+id/btn_ajouter_praticien"
            android:layout_toStartOf="@+id/btn_ajouter_praticien"
            android:layout_weight="1" />

        <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:id="@+id/btn_ok"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/date"
            android:layout_alignEnd="@+id/date"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>