<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vpitard.ppe3_mobile.vue.MainActivity">

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Connexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConnexion"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="98dp"
            android:elevation="0dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <TextView
            android:text="User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnConnexion"
            android:layout_toStartOf="@+id/btnConnexion"
            android:layout_marginRight="31dp"
            android:layout_marginEnd="31dp"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:text="Pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LoginTxt"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:singleLine="false"
            android:selectAllOnFocus="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PwdTxt"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/LoginTxt"
            android:layout_alignLeft="@+id/LoginTxt"
            android:layout_alignStart="@+id/LoginTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_above="@+id/LoginTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="89dp" />

    </RelativeLayout>

</RelativeLayout>
